<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_back"
    android:id="@+id/main_root_layout">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="16dp">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"

            android:layout_height="?android:actionBarSize"
            android:background="@color/primary_one">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/catamaran_extrabold"
                android:text="@string/app_name"
                android:letterSpacing="0.2"

                android:textSize="21sp"
                android:textColor="@color/primary_text_one"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:actionBarSize">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/one_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/most_viewed"
                android:layout_weight="0"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Most Played"
                android:textColor="@color/primary_text_one"
                android:background="@drawable/button_background">
            </Button>
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Newest"
                android:textColor="@color/primary_text_one"
                android:background="@color/transparent">
            </Button>
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Queue"
                android:textColor="@color/primary_text_one"
                android:background="@color/transparent">
            </Button>
        </LinearLayout>

<!--        <androidx.core.widget.NestedScrollView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent">-->
<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content">-->
<!--            </androidx.recyclerview.widget.RecyclerView>-->
<!--        </androidx.core.widget.NestedScrollView>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:id="@+id/fragment_container"
                android:layout_height="match_parent"
                android:background="@color/white">
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:background="@color/primary_back_two"
        android:id="@+id/bottom_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_peekHeight="40dp"
        android:orientation="vertical"
        android:fitsSystemWindows="true">
        <ImageButton
            android:id="@+id/bottom_sheet_open_close_button"
            android:padding="5dp"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:scaleType="center"
            android:rotation="90"
            android:tint="@color/primary_one"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update_textview"
            android:textSize="15sp"
            android:text="Updating...."
            android:layout_margin="10dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_alignTop="@id/update_textview">

            <TextView
                android:id="@+id/music_name_BS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intezar"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/catamaran_thin"
                android:letterSpacing="0.2"
                android:textSize="35sp"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/author_name_BS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alyaan"
                android:layout_marginLeft="21dp"
                android:fontFamily="@font/catamaran_semibold"
                android:letterSpacing="0.1"
                android:textSize="20sp"/>
        </LinearLayout>


        <com.scwang.wave.MultiWaveHeader
            android:layout_width="match_parent"
            android:id="@+id/multi_wave_header"
            android:layout_height="300dp"
            android:scaleY="-1"
            android:layout_alignParentBottom="true"
            app:mwhStartColor="@color/primary_one"
            app:mwhCloseColor="@color/teal_200">
        </com.scwang.wave.MultiWaveHeader>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <SeekBar
                android:id="@+id/player_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                style="@style/MySeekBar"
                android:progress="50"
                android:layout_margin="20dp"/>
            <LinearLayout
                android:id="@+id/bottom_layout_player"
                android:layout_width="match_parent"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/back_control"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    />
                <ProgressBar
                    android:id="@+id/progress_bar_play"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                </ProgressBar>
                <ImageButton
                    android:id="@+id/play_control"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_baseline_play_arrow_24"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    />
                <ImageButton
                    android:id="@+id/forward_control"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>